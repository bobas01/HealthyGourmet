{% extends "template.html.twig" %}

{% block title %}Vos recettes
{% endblock %}


{% block content %}
	<section id="yours">
		<div class="row-limit-size">
			<div class='divYours'>
				<h2 class='titleSection'>Vos recettes</h2>
				{% for yourRecipe in yourRecipes %}
					<article class="articleYours">
						<a href=""><img class='miniPictureRecipe' src="{{style}}img/{{yourRecipe.thumbnail}}" alt="{{yourRecipe.title}}"></a>
						<h3>{{yourRecipe.title}}</h3>
						<div id="iconPencilDelet">
							<a href="#"><img src="{{style}}img/inconPencil" alt=""></a>
							<a href="#"><img src="{{style}}img/iconX" alt=""></a>
						</div>

					</article>
				{% endfor %}
			</div>

			<div class='divYours'>
				<h2 class='titleSection'>Vos favoris</h2>
				{% for favorite in favorites %}
					<article class="articleYours">
						<a href=""><img class='miniPictureRecipe' src="{{style}}img/{{favorite.thumbnail}}" alt="{{favorite.title}}"></a>
						<h3>{{favorite.title}}</h3>
						<a href="#"><img src="{{style}}img/iconX" alt=""></a>


					</article>
				{% endfor %}
			</div>


		</div>
	</section>

	<section id='addRecipe'>
		<h2 class="titleSection">Nouvelle recette</h2>

		<div class="row-limit-size">
			<form id="formAddRecipe" action="" method="post" enctype="multipart/form-data">
				
				<label for="title">Nom :</label>
				<input type="text" name="title" id="title">
				<label for="description">Description :</label>
				<textarea name="description" id="description" cols="30" rows="10"></textarea>
				<label for="duration">Temps de préparation :</label>
				<input type="number" name="duration" id="duration">
				<label for="cooking_time">Temps de cuisson :</label>
				<input type="number" name="cooking_time" id="cooking_time">
				<label for="step">Préparation :</label>
				<textarea name="step" id="step" cols="30" rows="30"></textarea>
				<select name="difficulty" id="difficulty">
					<option value="">Difficulté</option>
					<option value="facile">Facile</option>
					<option value="moyen">Moyen</option>
					<option value="difficile">difficile</option>
				</select>
				<label for="number_of_person">Nombre de personnes :</label>
				<input type="number" name="number_of_person" id="number_of_person">
				<label for="thumbnail">Image :</label>
				<input type="file" name="thumbnail" id="thumbnail" accept='image/*'>
				<input id='submitRecipe' type="submit" value="Seconde étape">
			</form>
		</div>
	</section>
	<section id="addIngredients">
		<h3>Ajoutez les ingredients</h3>
		<form
			id="formIngredient" action="{{page}}newIngredient" method="post">
		<span id="spanPlus"><img src="{{style}}img/iconPlus" alt="plus"></span>
		<input type="submit" value="Ajouter">
	</form>
</section>{% endblock %}
